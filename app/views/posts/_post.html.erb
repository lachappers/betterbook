<%= turbo_frame_tag post do %>
  <div class="w-full mb-4 p-2 border border-gray-200 rounded-lg bg-white dark:bg-gray-700 dark:border-gray-600">

    <div class="flex flex-col gap-2 ">
      <%= render "/posts/post_header", post: post %>
      <div class="text-2xl"><%= post.content %> </div>
      
      <div class="flex justify-between">
        <div class = "" ><%= pluralize(post.likes.count, 'Like') %></div>
        <div class=""><%= pluralize(post.comments.count, 'Comment') %> </div>
      </div>
    </div>

      <div>
        <%= render "/posts/post_buttons", post: post %>
      </div>



    <div class="">
      <%= render "posts/post_comments", post: post %>
    </div>
  </div>
<% end %>




