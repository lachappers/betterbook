<div class="dashboard-container container flex w-full border-solid border-2 border-pink-600 h-full">

  
  <div class = 'border-solid border-2 border-indigo-600 max-h-screen w-2/3 overflow-y-auto'>
    <div class = "new-post-container">
      <div><%= render "/posts/form" %></div>
    </div>
    <hr>
    <div class="posts-container">

      <%# <%= render @posts %> %>
    </div>
  </div>
  
  <div class = "flex flex-col justify-center right-nav-container max-h-screen w-1/3 border-solid border-2 border-green-600">
  
    <div class = "">Birthdays</div>
 
    <div class = "mb-1 p-4">
      <h2 class = "mb-2">Contacts:</h2>
        <% current_user.friends.uniq.each do |friend| %>
          <div class="flex items-center mb-2">
            <div class="border-solid border-1 border-gray-300">
              <%= profile_image(friend, size: "small") %>
            </div>
            <div class="ml-4 bg-white border-2 border-pink-300 font-bold text-sm">
                <%= link_to friend.profile.username, profile_path(friend)  %>
            </div>
          </div>
        <% end %>
    </div>
    <div class = "mb-1 p-4">
      <h2>Suggested Friends:</h2>
        <% @suggested_friends.each do |friend| %>
          <%= render "shared/friend", friend: friend %>
        <% end %>
    </div>
  </div>
</div>